<script>
  let currentState = 'idle';
  let idleAnimationPaused = false;
  let inactivityTimer = null;
  let workingStateTimer = null;
  let claudeCodeSessionActive = false;
  let mascotSubscription = null;

  // Session and settings
  let session = {
    token: null,
    name: null
  };

  let settings = {
    workingTimeout: 5000,
    inactivityTimeout: 120000
  };

  const animations = [
    { name: 'blink', duration: 150, weight: 8, sync: true },
    { name: 'double-blink', duration: 400, weight: 3, sync: true },
    { name: 'sleepy', duration: 1200, weight: 0.2, sync: true },
    { name: 'look-left', duration: 600, weight: 0.8, sync: true },
    { name: 'look-right', duration: 600, weight: 0.8, sync: true },
    { name: 'look-up', duration: 500, weight: 0.4, sync: true },
    { name: 'squint', duration: 600, weight: 0.4, sync: true },
    { name: 'wide', duration: 400, weight: 0.4, sync: true },
    { name: 'shimmer', duration: 300, weight: 0.6, sync: false },
  ];

  // ========== Sound Effects ==========

  const soundEffects = {
    enabled: localStorage.getItem('soundEnabled') === 'true',
    audioContext: null,

    init() {
      // Create audio context on first user interaction
      if (!this.audioContext) {
        this.audioContext = new (window.AudioContext || window.webkitAudioContext)();
      }
    },

    playBeep(frequency, duration, type = 'square') {
      if (!this.enabled) return;
      this.init();

      const oscillator = this.audioContext.createOscillator();
      const gainNode = this.audioContext.createGain();

      oscillator.connect(gainNode);
      gainNode.connect(this.audioContext.destination);

      oscillator.type = type;
      oscillator.frequency.value = frequency;

      // 8-bit style: instant volume changes, no smooth ramping
      gainNode.gain.setValueAtTime(0.1, this.audioContext.currentTime);
      // Instant cutoff at end for sharp 8-bit sound
      gainNode.gain.setValueAtTime(0.1, this.audioContext.currentTime + duration - 0.01);
      gainNode.gain.setValueAtTime(0, this.audioContext.currentTime + duration);

      oscillator.start(this.audioContext.currentTime);
      oscillator.stop(this.audioContext.currentTime + duration);
    },

    playThinking() {
      // Two quick beeps (thinking sound)
      this.playBeep(440, 0.08);
      setTimeout(() => this.playBeep(554, 0.08), 100);
    },

    playWorking() {
      // Triple ascending beep (working/typing sound)
      this.playBeep(330, 0.06);
      setTimeout(() => this.playBeep(440, 0.06), 70);
      setTimeout(() => this.playBeep(550, 0.06), 140);
    },

    playError() {
      // Descending error beep
      this.playBeep(220, 0.15);
      setTimeout(() => this.playBeep(110, 0.2), 150);
    },

    playHappy() {
      // Success chime (ascending arpeggio)
      this.playBeep(523, 0.08);
      setTimeout(() => this.playBeep(659, 0.08), 80);
      setTimeout(() => this.playBeep(784, 0.12), 160);
    },

    playSleeping() {
      // Soft descending lullaby
      this.playBeep(392, 0.2, 'sine');
      setTimeout(() => this.playBeep(330, 0.3, 'sine'), 200);
    },

    playWakeUp() {
      // Quick ascending wake up sound
      this.playBeep(262, 0.08);
      setTimeout(() => this.playBeep(392, 0.1), 80);
    },

    toggle() {
      this.enabled = !this.enabled;
      localStorage.setItem('soundEnabled', this.enabled);
      return this.enabled;
    }
  };

  // Context Display Settings
  const contextDisplay = {
    enabled: localStorage.getItem('contextEnabled') !== 'false', // Default: true

    toggle() {
      this.enabled = !this.enabled;
      localStorage.setItem('contextEnabled', this.enabled);
      return this.enabled;
    }
  };

  // ========== Session Management ==========

  async function loadOrCreateSession() {
    // Try to load from localStorage
    const saved = localStorage.getItem('mascotSession');
    if (saved) {
      try {
        session = JSON.parse(saved);
        console.log('Loaded session from localStorage:', session.token?.substring(0, 8) + '...');

        // Verify session still exists on server
        const response = await fetch(`/api/sessions/${session.token}`);
        if (response.ok) {
          const data = await response.json();
          session.name = data.name;
          return true;
        } else {
          console.log('Session not found on server, creating new one');
        }
      } catch (e) {
        console.error('Failed to parse saved session:', e);
      }
    }

    // Create new session
    return await createNewSession();
  }

  async function createNewSession() {
    try {
      const response = await fetch('/api/sessions', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ name: 'My Computer' })
      });

      if (response.ok) {
        const data = await response.json();
        session.token = data.token;
        session.name = data.name;
        localStorage.setItem('mascotSession', JSON.stringify(session));
        console.log('Created new session:', session.token?.substring(0, 8) + '...');
        return true;
      }
    } catch (e) {
      console.error('Failed to create session:', e);
    }
    return false;
  }

  function loadSettings() {
    const saved = localStorage.getItem('mascotSettings');
    if (saved) {
      try {
        settings = { ...settings, ...JSON.parse(saved) };
      } catch (e) {
        console.error('Failed to parse saved settings:', e);
      }
    }
  }

  // ========== Animation Functions ==========

  function pickAnimation() {
    const totalWeight = animations.reduce((sum, a) => sum + a.weight, 0);
    let random = Math.random() * totalWeight;
    for (const anim of animations) {
      random -= anim.weight;
      if (random <= 0) return anim;
    }
    return animations[0];
  }

  function playRandomAnimation() {
    if (idleAnimationPaused) return;
    const leftEye = document.getElementById('left-eye');
    const rightEye = document.getElementById('right-eye');
    const anim = pickAnimation();

    animations.forEach(a => {
      leftEye.classList.remove(a.name);
      rightEye.classList.remove(a.name);
    });

    void leftEye.offsetWidth;
    leftEye.classList.add(anim.name);
    const rightDelay = anim.sync ? 0 : 80;
    setTimeout(() => rightEye.classList.add(anim.name), rightDelay);

    setTimeout(() => {
      leftEye.classList.remove(anim.name);
      rightEye.classList.remove(anim.name);
    }, anim.duration + 100);
  }

  function scheduleNext() {
    const delay = 3000 + Math.random() * 5000;
    setTimeout(() => {
      playRandomAnimation();
      scheduleNext();
    }, delay);
  }

  // ========== Timer Functions ==========

  function resetInactivityTimer() {
    if (inactivityTimer) {
      clearTimeout(inactivityTimer);
      console.log('[Timer] Cleared inactivity timer');
    }
    if (!claudeCodeSessionActive) {
      const timeout = settings.inactivityTimeout;
      console.log(`[Timer] Setting inactivity timer for ${timeout}ms`);
      inactivityTimer = setTimeout(() => {
        console.log('[Timer] Inactivity timeout fired - going to sleep');
        window.updateMascotState('sleeping', 'InactivityTimeout');
      }, timeout);
    } else {
      console.log('[Timer] Skipping inactivity timer (session active)');
    }
  }

  function resetWorkingStateTimer(state) {
    if (workingStateTimer) {
      clearTimeout(workingStateTimer);
      workingStateTimer = null;
      console.log('[Timer] Cleared working state timer');
    }
    if (state === 'thinking' || state === 'working') {
      const timeout = settings.workingTimeout;
      console.log(`[Timer] Setting working state timer for ${timeout}ms (state: ${state})`);
      workingStateTimer = setTimeout(() => {
        console.log('[Timer] Working state timeout fired - returning to idle');
        window.updateMascotState('idle', 'WorkingTimeout');
      }, timeout);
    }
  }

  // ========== Context Tooltip ==========

  function updateContextTooltip(state, event, tool) {
    const tooltip = document.getElementById('context-tooltip');
    if (!tooltip) return;

    // Check if context display is enabled
    if (!contextDisplay.enabled) {
      tooltip.textContent = '';
      tooltip.classList.remove('visible');
      return;
    }

    let text = '';

    // Generate context based on state and tool
    if (state === 'thinking' && tool) {
      text = `Thinking about ${tool}...`;
    } else if (state === 'working' && tool) {
      text = `Using ${tool}`;
    } else if (state === 'error') {
      text = tool ? `Error in ${tool}` : 'Something went wrong';
    } else if (event === 'SessionStart') {
      text = 'Claude Code started';
    } else if (event === 'SessionEnd') {
      text = 'Going to sleep...';
    } else if (state === 'sleeping') {
      text = 'ZZZ...';
    }

    // Update tooltip
    if (text) {
      tooltip.textContent = text;
      tooltip.classList.add('visible');

      // Auto-hide after delay (except for sleeping)
      setTimeout(() => {
        if (state !== 'sleeping') {
          tooltip.classList.remove('visible');
        }
      }, 3000);
    } else {
      tooltip.textContent = '';
      tooltip.classList.remove('visible');
    }
  }

  // ========== State Update ==========

  window.updateMascotState = function(state, event, tool) {
    const leftEye = document.getElementById('left-eye');
    const rightEye = document.getElementById('right-eye');

    console.log(`[State Update] Event: ${event}, Current: ${currentState}, New: ${state}`);

    // Update session tracking FIRST
    if (event === 'SessionStart') {
      claudeCodeSessionActive = true;
    } else if (event === 'Stop' || event === 'SessionEnd') {
      claudeCodeSessionActive = false;
    }

    // Don't restart animation if already in this state (unless it's a session control event)
    if (currentState === state && event !== 'SessionStart' && event !== 'SessionEnd') {
      console.log(`[State Update] Already in ${state} state, skipping animation restart`);
      return;
    }

    ['state-thinking', 'state-working', 'state-sleeping', 'state-happy', 'state-error'].forEach(cls => {
      leftEye.classList.remove(cls);
      rightEye.classList.remove(cls);
    });

    animations.forEach(a => {
      leftEye.classList.remove(a.name);
      rightEye.classList.remove(a.name);
    });

    currentState = state;
    resetWorkingStateTimer(state);

    // Play sound effects for state transitions
    if (event === 'SessionStart') {
      soundEffects.playWakeUp();
    }

    // Update context tooltip
    updateContextTooltip(state, event, tool);

    if (state === 'idle') {
      idleAnimationPaused = false;
      resetInactivityTimer();
    } else if (state === 'sleeping') {
      idleAnimationPaused = true;
      if (inactivityTimer) clearTimeout(inactivityTimer);
      leftEye.classList.add('state-sleeping');
      rightEye.classList.add('state-sleeping');
      soundEffects.playSleeping();
    } else if (state === 'thinking') {
      idleAnimationPaused = true;
      resetInactivityTimer();
      leftEye.classList.add(`state-${state}`);
      rightEye.classList.add(`state-${state}`);
      soundEffects.playThinking();
    } else if (state === 'working') {
      idleAnimationPaused = true;
      resetInactivityTimer();
      leftEye.classList.add(`state-${state}`);
      rightEye.classList.add(`state-${state}`);
      soundEffects.playWorking();
    } else if (state === 'error') {
      idleAnimationPaused = true;
      resetInactivityTimer();
      leftEye.classList.add(`state-${state}`);
      rightEye.classList.add(`state-${state}`);
      soundEffects.playError();
    } else if (state === 'happy') {
      idleAnimationPaused = true;
      resetInactivityTimer();
      leftEye.classList.add(`state-${state}`);
      rightEye.classList.add(`state-${state}`);
      soundEffects.playHappy();
    } else {
      idleAnimationPaused = true;
      resetInactivityTimer();
      leftEye.classList.add(`state-${state}`);
      rightEye.classList.add(`state-${state}`);
    }

    console.log(`Mascot state changed to: ${state}`);
  };

  // ========== WebSocket Connection Callbacks ==========

  window.onMascotConnected = function() {
    updateConnectionStatus(true);
  };

  window.onMascotDisconnected = function() {
    updateConnectionStatus(false);
  };

  function updateConnectionStatus(connected) {
    const statusDot = document.getElementById('status-dot');
    const statusText = document.getElementById('status-text');
    if (statusDot && statusText) {
      statusDot.className = 'status-dot ' + (connected ? 'connected' : 'disconnected');
      statusText.textContent = connected ? 'Connected' : 'Disconnected';
    }
  }

  // ========== Initialization ==========

  document.addEventListener('DOMContentLoaded', async () => {
    const leftEye = document.getElementById('left-eye');
    const rightEye = document.getElementById('right-eye');
    leftEye.classList.add('state-sleeping');
    rightEye.classList.add('state-sleeping');
    currentState = 'sleeping';
    idleAnimationPaused = true;

    scheduleNext();
    loadSettings();

    // Load or create session
    const sessionOk = await loadOrCreateSession();

    if (sessionOk && session.token) {
      // Create WebSocket subscription with token
      if (window.createMascotSubscription) {
        mascotSubscription = window.createMascotSubscription(session.token);
      }

      // Check current session status
      try {
        const response = await fetch(`/api/hooks/status`, {
          headers: { 'Authorization': `Bearer ${session.token}` }
        });
        if (response.ok) {
          const data = await response.json();
          claudeCodeSessionActive = data.session_active;
          if (data.session_active && data.state && data.state !== 'sleeping') {
            window.updateMascotState(data.state);
          }
        }
      } catch (e) {
        console.error('Failed to fetch session status:', e);
      }
    }

    initSettingsPanel();
  });

  // ========== Settings Panel ==========

  function initSettingsPanel() {
    const settingsBtn = document.getElementById('settings-btn');
    const settingsModal = document.getElementById('settings-modal');
    const closeBtn = document.getElementById('close-settings');
    const saveBtn = document.getElementById('save-settings');
    const downloadBtn = document.getElementById('download-hooks');
    const copyTokenBtn = document.getElementById('copy-token');
    const copyInstallBtn = document.getElementById('copy-install-btn');
    const regenerateBtn = document.getElementById('regenerate-token');
    const sessionNameInput = document.getElementById('session-name');
    const sessionTokenEl = document.getElementById('session-token');
    const installCommandEl = document.getElementById('install-command');
    const workingTimeoutInput = document.getElementById('working-timeout');
    const inactivityTimeoutInput = document.getElementById('inactivity-timeout');
    const soundEnabledCheckbox = document.getElementById('sound-enabled');
    const contextEnabledCheckbox = document.getElementById('context-enabled');
    const statusEl = document.getElementById('settings-status');

    // Auto-hide settings button after 10 seconds of inactivity
    let hideButtonTimer = null;
    let modalIsOpen = false;

    function resetHideTimer() {
      // Clear existing timer
      if (hideButtonTimer) {
        clearTimeout(hideButtonTimer);
      }

      // Show button
      settingsBtn.classList.remove('auto-hidden');

      // Set new timer to hide after 10 seconds (only if modal is closed)
      if (!modalIsOpen) {
        hideButtonTimer = setTimeout(() => {
          settingsBtn.classList.add('auto-hidden');
        }, 10000);
      }
    }

    // Reset timer on mouse movement near button or interaction
    settingsBtn.addEventListener('mouseenter', resetHideTimer);
    settingsBtn.addEventListener('click', resetHideTimer);

    // Start initial timer
    resetHideTimer();

    function populateForm() {
      sessionNameInput.value = session.name || '';
      sessionTokenEl.textContent = session.token || 'No session';

      // Generate install command with current domain
      const baseUrl = window.location.origin;
      const installCmd = `curl -sSL ${baseUrl}/install/${session.token} | bash`;
      installCommandEl.textContent = installCmd;

      workingTimeoutInput.value = settings.workingTimeout / 1000;
      inactivityTimeoutInput.value = settings.inactivityTimeout / 60000;
      soundEnabledCheckbox.checked = soundEffects.enabled;
      contextEnabledCheckbox.checked = contextDisplay.enabled;
      updateConnectionStatus(mascotSubscription !== null);
    }

    function showStatus(message, type) {
      statusEl.textContent = message;
      statusEl.className = 'settings-status ' + type;
      if (type !== 'loading') {
        setTimeout(() => { statusEl.className = 'settings-status'; }, 5000);
      }
    }

    // Open modal
    settingsBtn.addEventListener('click', () => {
      populateForm();
      settingsModal.classList.add('open');
      modalIsOpen = true;
      // Clear hide timer while modal is open
      if (hideButtonTimer) {
        clearTimeout(hideButtonTimer);
      }
    });

    // Close modal handler
    function closeModal() {
      settingsModal.classList.remove('open');
      modalIsOpen = false;
      // Restart hide timer when modal closes
      resetHideTimer();
    }

    closeBtn.addEventListener('click', closeModal);
    settingsModal.addEventListener('click', (e) => {
      if (e.target === settingsModal) closeModal();
    });
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && settingsModal.classList.contains('open')) {
        closeModal();
      }
    });

    // Copy token
    copyTokenBtn.addEventListener('click', async () => {
      if (session.token) {
        await navigator.clipboard.writeText(session.token);
        showStatus('‚úì TOKEN COPIED!', 'success');
      }
    });

    // Copy install command
    copyInstallBtn.addEventListener('click', async () => {
      if (session.token) {
        const installCmd = installCommandEl.textContent;
        await navigator.clipboard.writeText(installCmd);
        showStatus('‚úì INSTALL COMMAND COPIED!', 'success');
      }
    });

    // Toggle sound effects
    soundEnabledCheckbox.addEventListener('change', () => {
      soundEffects.toggle();
      showStatus(soundEffects.enabled ? 'üîä SOUNDS ON' : 'üîá SOUNDS OFF', 'success');

      // Play a test sound when enabled
      if (soundEffects.enabled) {
        soundEffects.playHappy();
      }
    });

    // Toggle context display
    contextEnabledCheckbox.addEventListener('change', () => {
      contextDisplay.toggle();
      showStatus(contextDisplay.enabled ? 'üí¨ CONTEXT ON' : 'üí¨ CONTEXT OFF', 'success');

      // Update tooltip visibility immediately
      const tooltip = document.getElementById('context-tooltip');
      if (!contextDisplay.enabled && tooltip) {
        tooltip.classList.remove('visible');
      }
    });

    // Download hooks
    downloadBtn.addEventListener('click', () => {
      if (session.token) {
        window.location.href = `/api/sessions/${session.token}/hooks`;
      } else {
        showStatus('‚úó NO SESSION TOKEN', 'error');
      }
    });

    // Save settings
    saveBtn.addEventListener('click', async () => {
      const workingSec = parseInt(workingTimeoutInput.value) || 5;
      const inactivityMin = parseInt(inactivityTimeoutInput.value) || 2;

      if (workingSec < 1 || workingSec > 60) {
        showStatus('Working timeout: 1-60 seconds', 'error');
        return;
      }
      if (inactivityMin < 1 || inactivityMin > 30) {
        showStatus('Sleep timeout: 1-30 minutes', 'error');
        return;
      }

      // Update session name on server
      if (sessionNameInput.value !== session.name) {
        try {
          await fetch(`/api/sessions/${session.token}`, {
            method: 'PATCH',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ name: sessionNameInput.value })
          });
          session.name = sessionNameInput.value;
          localStorage.setItem('mascotSession', JSON.stringify(session));
        } catch (e) {
          console.error('Failed to update session name:', e);
        }
      }

      settings.workingTimeout = workingSec * 1000;
      settings.inactivityTimeout = inactivityMin * 60000;
      localStorage.setItem('mascotSettings', JSON.stringify(settings));

      showStatus('‚úì SAVED!', 'success');
    });

    // Regenerate token
    regenerateBtn.addEventListener('click', async () => {
      if (!confirm('This will invalidate your current hooks. You will need to download and reinstall them. Continue?')) {
        return;
      }

      showStatus('REGENERATING...', 'loading');

      try {
        const response = await fetch(`/api/sessions/${session.token}/regenerate`, {
          method: 'POST'
        });

        if (response.ok) {
          const data = await response.json();
          session.token = data.token;
          localStorage.setItem('mascotSession', JSON.stringify(session));
          sessionTokenEl.textContent = session.token;

          // Recreate subscription with new token
          if (mascotSubscription) {
            mascotSubscription.unsubscribe();
          }
          if (window.createMascotSubscription) {
            mascotSubscription = window.createMascotSubscription(session.token);
          }

          showStatus('‚úì NEW TOKEN GENERATED!', 'success');
        } else {
          showStatus('‚úó FAILED TO REGENERATE', 'error');
        }
      } catch (e) {
        showStatus('‚úó ERROR: ' + e.message, 'error');
      }
    });
  }
